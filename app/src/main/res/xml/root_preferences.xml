<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="General">

        <SwitchPreferenceCompat
            android:id="@+id/checkAll"
            app:key="checkAll"
            android:defaultValue="true"
            app:title="Allow checking off Day from Weeks View" />

    </PreferenceCategory>

    <PreferenceCategory
        android:text="Notifications"
        app:title="Notifications"
        tools:text="Notifications">

        <SwitchPreferenceCompat
            android:id="@+id/noonNotify"
            app:key="noonNotify"
            android:defaultValue="true"
            app:title="Reminder to drink water at Noon" />

        <SwitchPreferenceCompat
            android:id="@+id/nightNotify"
            app:key="nightNotify"
            app:title="Reminder to finish day at 5:00pm"
            android:defaultValue="true" />


    </PreferenceCategory>

</PreferenceScreen>